{
  "name": "proficient-js",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:client": "turbo run build --filter=client",
    "build:react": "turbo run build --filter=react",
    "compile:web": "turbo run compile --filter=web",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=web",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "lint": "turbo run lint",
    "publish-packages": "turbo run build --filter=api --filter=client --filter=react && changeset publish"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "eslint-config-custom": "*",
    "prettier": "^2.7.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0"
  },
  "packageManager": "npm@8.19.2"
}
